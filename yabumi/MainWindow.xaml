<Window x:Class="yabumi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" MouseLeftButtonDown="Window_MouseLeftButtonDown" MouseLeftButtonUp="Window_MouseLeftButtonUp" MouseMove="Window_MouseMove" KeyDown="Window_KeyDown">

    <Grid>
        <Image HorizontalAlignment="Left" Name="image1" Stretch="Fill" VerticalAlignment="Top" />
        <Canvas HorizontalAlignment="Left" Name="canvas1"  VerticalAlignment="Top" >
            <Rectangle
                Name="rect"
                Width="0"
                Height="0"
                Fill="Black" Opacity="0.3">
                
            </Rectangle>
            <TextBlock Name="rectWidth" Foreground="White" />
            <TextBlock Name="rectHeight" Foreground="White" />
        </Canvas>
    </Grid>
</Window>
